    <div class="container">
        <div class="row">
            <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

            <h2>User info</h2>

            <% if @user.errors.any? %>
                <%= @user.errors.count %>error prohibited this obj from being saved:
                <ul>
                    <% @user.errors.full_messages.each do |massage| %>
                    <li><%= massage %></li>
                     <% end %>
                </ul>
            <% end %>
                
                <%= form_with model: @user do |f| %>
                    <div class="form-group">
                        <label for="inputName">Name</label>
                        <%= f.text_field :name,autofocus:true, id:"inputName", placeholder:"名前" %>
                    </div>
                    <div class="form-group">
                        <label for="inputImage">Image</label>
                        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
                    </div>
                    <div class="form-group">
                        <label for="inputIntroduction">introduction</label>
                        <%= f.text_area :introduction %>
                    </div>
                    <%= f.submit "Update User" %>
                <% end %>
            </div>
        </div>
    </div>