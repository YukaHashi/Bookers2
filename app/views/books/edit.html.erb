<div class="container">
  <div class="row"></div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    
    <h1>Editing Book</h1>
    
    <%= form_with model: @books, url: edit_book_path(@books.id), method: :patch do |f| %>
    
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    
    <%= f.submit 'Update Book', class: "btn btn-success" %><br>
    
    <%= link_to "Show", book_path(@books) %> | <%= link_to "Back", books_path(@book) %>
    <% end %>
    </div>
  </div>
</div>
