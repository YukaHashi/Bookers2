    <div class="container px-5 px-sm-0">
            <div class="row">
              <div class="col-md-3">
                  <h2>User info</h2>
                  <img src="<%= asset_path('no_image.jpg') %>">
                  <table class="table">
                      <tbody>
                          <tr>
                          <th>name</th>
                          <th><%= @user.name %></th>
                          </tr>
                          <th>introduction</th>
                          <th><%= @user.introduction %></th>
                      </tbody>
                  </table>
                  <div class="row">
                      <%= link_to edit_user_path(@user), class: "btn btn-outline-secindary btn-block" do %>
                          <i class="fa-solid fa-user-gear"></i>
                      <% end %>
                  </div>
                  <h2 class="mt-3">New book</h2>
                      <%= form_with model: Book.new do |f| %>
                        <h6>Title</h6>
                        <%= f.text_field :title %>
                        <h6>Opinion</h6>
                        <%= f.text_area :body %></br>
                        <%= f.submit 'Create Book', class: "btn btn-success" %>
                      <% end %>
              </div>
                        <div class="col-md-8 offset-md-1">
                          <h2>Books</h2>
                              <table class="table table-hover table-inverse">
                                  <thead>
                                    <tr>
                                      <th></th>
                                      <th>Title</th>
                                      <th>Opinion</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% @books.each do |book| %>
                                    <tr>
                                      <th>
                                        <%= link_to user_path(book.user.id) do %>
                                        <%= image_tag 'no_image.jpg' %>
                                        <% end %>
                                      </th>
                                      <th><%= link_to book.title, book_path(book) %></th>
                                      <th><%= book.body %></th>
                                    </tr>
                                    <% end %>
                                  </tbody>
                              </table>
                      </div>

          </div>
        </div>

