<main>
  
<p id="notice">You have created book successfully.</p>
  
<div class="container px-5 px-sm-0">
            <div class="row">
              <div class="col-md-3">
                  <h2>User info</h2>
                  <img src="<%= asset_path('no_image.jpg') %>">
                  <table class="table">
                      <tbody>
                          <tr>
                          <th>name</th>
                          <th><%= @user.name %></th>
                          </tr>
                          <th>introduction</th>
                          <th><%= @user.introduction %></th>
                      </tbody>
                  </table>
                  <div class="row">
                      <%= link_to edit_user_path(@user), class:  "btn btn-outline-secindary btn-block" do %>
                          <i class="fa-solid fa-user-gear"></i>
                      <% end %>
                  </div>
                  <h2 class="mt-3">New book</h2>
                      <%= form_with model: Book.new do |f| %>
                        <h6>Title</h6>
                        <%= f.text_field :title %>
                        <h6>Opinion</h6>
                        <%= f.text_area :body %></br>
                        <%= f.submit 'Create Book', class: "btn btn-success" %>
                      <% end %>
              </div>
                        <div class="col-md-8 offset-md-1">
                          <h2>Book detail</h2>
                              <table class="table table-hover table-inverse">
                                  <thead>
                                    <tr>
                                      <th></th>
                                      <th>Title</th>
                                      <th>Opinion</th>
                                      <th></th>
                                      <th></th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr>
                                      <th><%= link_to user_path(@user) do %>
                                          <%= image_tag @books.user.get_profile_image(100, 100) %>
                                          <% end %>
                                        <br>
                                          <%= link_to @user.name, user_path(@user) %>
                                      </th>
                                      <th><%= link_to @books.title, edit_book_path(@books) %></th>
                                      <th><%= @books.body %></th>
                                      <th><% if @books.user == current_user %>
                                          <%= link_to "Edit", edit_book_path(@books), class: "btn btn-sm btn-success edit_book_149530" %>
                                          <% end %>
                                      </th>
                                      <th><% if @books.user == current_user %>
                                          <%= link_to "Destroy",book_path(@books), method: :delete, class: "btn btn-sm btn-danger destroy_book_149530", "data-confirm" => "本当に消しますか？" %>
                                          <% end %>
                                      </th>
                                    </tr>
                                  </tbody>
                              </table>
                      </div>

          </div>
        </div>
</main>